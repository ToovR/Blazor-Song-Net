@using Blazor.Song.Net.Shared;

<div name="songList" class="table-container frame">
    <div class="table-scroll">
        <table class="table is-hoverable is-fullwidth is-narrow">
            <thead>
                <tr>
                    <th><span class="text">Titre</span></th>
                    <th><span class="text">Artiste</span></th>
                    <th><span class="text">Durée</span></th>
                </tr>
            </thead>
            <tbody>
                @if (Tracks != null)
                {
                    foreach (TrackInfo track in Tracks)
                    {
                        @RowTemplate(track)
                    }
                }
            </tbody>
        </table>
    </div>
</div>

@functions {
[Parameter]
List<TrackInfo> Tracks { get; set; }

[Parameter]
TrackInfo CurrentTrack { get; set; }

[Parameter]
RenderFragment<TrackInfo> RowTemplate { get; set; }

}
